{
  "compilerOptions": {
    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@pos/core": ["./packages/core/src"],
      "@pos/core/*": ["./packages/core/src/*"],
      "@pos/ui": ["./packages/ui/src"],
      "@pos/ui/*": ["./packages/ui/src/*"],
      "@pos/api": ["./packages/api/src"],
      "@pos/api/*": ["./packages/api/src/*"],
      "@pos/i18n": ["./packages/i18n/src"],
      "@pos/i18n/*": ["./packages/i18n/src/*"],
      "@pos/validation": ["./packages/validation/src"],
      "@pos/validation/*": ["./packages/validation/src/*"],
      "@pos/plugin-product-export": ["./plugins/product-export"],
      "@pos/plugin-product-nutrition": ["./plugins/product-nutrition"],
      "@pos/plugin-table-info": ["./plugins/table-info"],
      "#build/ui": ["./node_modules/.nuxt-ui/ui"],
      "#build/ui/*": ["./node_modules/.nuxt-ui/ui/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
